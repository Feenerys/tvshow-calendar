generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserSeriesStatus {
  WATCHING
  PLAN_TO_WATCH
  COMPLETED
  DROPPED
}

model User {
  id             Int             @id @default(autoincrement())
  email          String          @unique
  name           String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  userSeries     UserSeries[]
  calendarEvents CalendarEvent[]

  @@map("users")
}

model Series {
  id             Int             @id @default(autoincrement())
  tvdbId         Int             @unique
  name           String
  posterUrl      String?
  overview       String?
  firstAired     DateTime?
  rating         Float?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  userSeries     UserSeries[]
  calendarEvents CalendarEvent[]

  @@map("series")
}

model UserSeries {
  id             Int              @id @default(autoincrement())
  userId         Int
  seriesId       Int
  status         UserSeriesStatus @default(PLAN_TO_WATCH)
  rating         Int?             @db.SmallInt
  notes          String?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  user           User             @relation(fields: [userId], references: [id])
  series         Series           @relation(fields: [seriesId], references: [id])
  calendarEvents CalendarEvent[]

  @@unique([userId, seriesId])
  @@map("user_series")
}

model CalendarEvent {
  id            Int         @id @default(autoincrement())
  userId        Int
  seriesId      Int
  userSeriesId  Int?
  title         String
  seasonNumber  Int
  episodeNumber Int
  episodeName   String?
  airDate       DateTime
  reminderTime  DateTime?
  watched       Boolean     @default(false)
  notes         String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  user          User        @relation(fields: [userId], references: [id])
  series        Series      @relation(fields: [seriesId], references: [id])
  userSeries    UserSeries? @relation(fields: [userSeriesId], references: [id])

  @@map("calendar_events")
}
